    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        style="@style/MineText"
        android:text="@string/simple"/>

    <Button
        android:id="@+id/btn_simple_form"
        style="@style/MineButton"
        android:text="简单表单"/>

    <TextView
        style="@style/MineText"
        android:text="@string/rely"/>

    <Button
        android:id="@+id/btn_complex_form"
        style="@style/MineButton"
        android:text="复杂表单"/>
</LinearLayout>
